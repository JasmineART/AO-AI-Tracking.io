{
  "rules": {
    ".read": false,
    ".write": false,
    
    "users": {
      "$uid": {
        ".read": "auth != null && auth.uid == $uid",
        ".write": "auth != null && auth.uid == $uid",
        
        ".validate": "newData.hasChildren(['email', 'displayName'])",
        
        "email": {
          ".validate": "newData.isString() && newData.val().matches(/^[A-Z0-9._%+-]+@[A-Z0-9.-]+\\.[A-Z]{2,}$/i)"
        },
        "displayName": {
          ".validate": "newData.isString() && newData.val().length >= 1 && newData.val().length <= 100"
        },
        "photoURL": {
          ".validate": "newData.isString() || newData.val() == null"
        },
        "bio": {
          ".validate": "newData.isString() && newData.val().length <= 500"
        },
        "phone": {
          ".validate": "newData.isString() && newData.val().length <= 20"
        },
        "company": {
          ".validate": "newData.isString() && newData.val().length <= 100"
        },
        "position": {
          ".validate": "newData.isString() && newData.val().length <= 100"
        },
        "createdAt": {
          ".validate": "newData.isNumber() || newData.isString()"
        },
        "lastLogin": {
          ".validate": "newData.isNumber() || newData.isString()"
        },
        "projects": {
          "$projectId": {
            ".validate": "newData.isString()"
          }
        },
        "$other": {
          ".validate": false
        }
      }
    },
    
    "projects": {
      "$projectId": {
        ".read": "auth != null && (root.child('projects/' + $projectId + '/owner').val() == auth.uid || root.child('projects/' + $projectId + '/members/' + auth.uid).exists())",
        ".write": "auth != null && (root.child('projects/' + $projectId + '/owner').val() == auth.uid || (!data.exists() && auth != null))",
        
        "name": {
          ".validate": "newData.isString() && newData.val().length >= 1 && newData.val().length <= 200"
        },
        "description": {
          ".validate": "newData.isString() && newData.val().length <= 1000"
        },
        "owner": {
          ".validate": "newData.val() == auth.uid"
        },
        "status": {
          ".validate": "newData.isString() && (newData.val() == 'Planning' || newData.val() == 'In Progress' || newData.val() == 'Completed' || newData.val() == 'On Hold')"
        },
        "type": {
          ".validate": "newData.isString()"
        },
        "dataSource": {
          ".validate": "newData.isString()"
        },
        "readinessScore": {
          ".validate": "newData.isNumber() && newData.val() >= 0 && newData.val() <= 100"
        },
        "department": {
          ".validate": "newData.isString() && newData.val().length <= 100"
        },
        "createdAt": {
          ".validate": "newData.isNumber() || newData.isString()"
        },
        "updatedAt": {
          ".validate": "newData.isNumber() || newData.isString()"
        },
        "members": {
          "$userId": {
            ".validate": "newData.isBoolean() || newData.isString()"
          }
        }
      }
    },
    
    "aiSystems": {
      "$systemId": {
        ".read": "auth != null && root.child('aiSystems/' + $systemId + '/userId').val() == auth.uid",
        ".write": "auth != null && (root.child('aiSystems/' + $systemId + '/userId').val() == auth.uid || (!data.exists() && auth != null))",
        
        "userId": {
          ".validate": "newData.val() == auth.uid"
        },
        "name": {
          ".validate": "newData.isString() && newData.val().length >= 1 && newData.val().length <= 200"
        },
        "department": {
          ".validate": "newData.isString() && newData.val().length <= 100"
        },
        "status": {
          ".validate": "newData.isString()"
        },
        "readinessScore": {
          ".validate": "newData.isNumber() && newData.val() >= 0 && newData.val() <= 100"
        },
        "createdAt": {
          ".validate": "newData.isNumber() || newData.isString()"
        },
        "updatedAt": {
          ".validate": "newData.isNumber() || newData.isString()"
        }
      }
    }
  }
}
